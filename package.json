{
  "name": "dandy-babe-platform",
  "version": "1.0.0",
  "description": "Sugar Daddy/Sugar Baby Platform - Microservices Architecture",
  "private": true,
  "workspaces": [
    "frontend/*",
    "backend/*",
    "ai-ml/*",
    "infrastructure/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --prefix frontend/web-app\" \"npm run dev --prefix backend/api-gateway\"",
    "build": "npm run build --prefix frontend/web-app && npm run build --prefix backend/api-gateway",
    "test": "npm run test --prefix frontend/web-app && npm run test --prefix backend/api-gateway",
    "test:coverage": "npm run test:coverage --prefix frontend/web-app && npm run test:coverage --prefix backend/api-gateway",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "k8s:apply": "kubectl apply -f infrastructure/kubernetes/",
    "terraform:apply": "cd infrastructure/terraform && terraform apply",
    "lint": "eslint frontend/ backend/ ai-ml/",
    "lint:fix": "eslint frontend/ backend/ ai-ml/ --fix",
    "format": "prettier --write frontend/ backend/ ai-ml/",
    "format:check": "prettier --check frontend/ backend/ ai-ml/",
    "type-check": "tsc --noEmit --project frontend/web-app/tsconfig.json && tsc --noEmit --project backend/user-service/tsconfig.json",
    "clean": "rm -rf node_modules && rm -rf frontend/*/node_modules && rm -rf backend/*/node_modules && rm -rf ai-ml/*/node_modules",
    "setup": "npm install && husky install",
    "prepare": "husky install"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@hookform/resolvers": "^3.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@tanstack/react-query": "^5.0.0",
    "@tanstack/react-table": "^8.11.0",
    "@types/react-datepicker": "^4.19.4",
    "@types/react-timeago": "^4.1.4",
    "axios": "^1.6.0",
    "chart.js": "^4.4.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.16.5",
    "lucide-react": "^0.293.0",
    "next": "^14.0.0",
    "prismjs": "^1.29.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-datepicker": "^4.25.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-hook-form": "^7.48.0",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^4.12.0",
    "react-image-crop": "^10.0.12",
    "react-infinite-scroll-component": "^6.1.0",
    "react-intersection-observer": "^9.5.2",
    "react-markdown": "^9.0.0",
    "react-quill": "^2.0.0",
    "react-router-dom": "^6.20.0",
    "react-spring": "^9.7.0",
    "react-syntax-highlighter": "^15.5.0",
    "react-timeago": "^7.2.0",
    "react-virtualized-auto-sizer": "^1.0.20",
    "react-window": "^1.8.8",
    "remark-gfm": "^4.0.0",
    "socket.io-client": "^4.7.4",
    "tailwind-merge": "^2.0.0",
    "typescript": "^5.3.0",
    "zod": "^3.22.0",
    "tailwindcss": "^3.3.6",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "cssnano": "^7.0.1",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.13",
    "@tailwindcss/aspect-ratio": "^0.4.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.27",
    "@types/react-datepicker": "^4.19.4",
    "@types/react-dom": "^18.2.0",
    "@types/react-timeago": "^4.1.4",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.35",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.0",
    "msw": "^2.0.0",
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "typescript": "^5.4.0"
  },
  "peerDependencies": {
    "next": ">=14.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}