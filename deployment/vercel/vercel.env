# Vercel Environment Variables for Sugar Daddy Platform Frontend
# This file contains all environment variables needed for the frontend deployment

# Application Configuration
NEXT_PUBLIC_APP_NAME="Sugar Daddy Platform"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_ENVIRONMENT="production"
NEXT_PUBLIC_MAINTENANCE_MODE="false"

# API Endpoints
NEXT_PUBLIC_API_URL="https://api-gateway.onrender.com"
NEXT_PUBLIC_WS_URL="wss://messaging-service.onrender.com"
NEXT_PUBLIC_USER_SERVICE_URL="https://user-service.onrender.com"
NEXT_PUBLIC_MATCHING_SERVICE_URL="https://matching-service.onrender.com"
NEXT_PUBLIC_MESSAGING_SERVICE_URL="https://messaging-service.onrender.com"
NEXT_PUBLIC_PAYMENT_SERVICE_URL="https://payment-service.onrender.com"
NEXT_PUBLIC_NOTIFICATION_SERVICE_URL="https://notification-service.onrender.com"

# Authentication
NEXT_PUBLIC_JWT_SECRET=""
JWT_SECRET=""

# Feature Flags
NEXT_PUBLIC_FEATURE_PREMIUM="true"
NEXT_PUBLIC_FEATURE_GIFTS="true"
NEXT_PUBLIC_FEATURE_MATCHING="true"
NEXT_PUBLIC_FEATURE_MESSAGING="true"
NEXT_PUBLIC_FEATURE_PAYMENTS="true"
NEXT_PUBLIC_FEATURE_NOTIFICATIONS="true"
NEXT_PUBLIC_FEATURE_SOCIAL="true"
NEXT_PUBLIC_FEATURE_ANALYTICS="true"

# Third-party Services
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=""
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=""
NEXT_PUBLIC_SENTRY_DSN=""
NEXT_PUBLIC_HOTJAR_ID=""
NEXT_PUBLIC_SEGMENT_WRITE_KEY=""

# Security
NEXT_PUBLIC_CSP_ENABLED="true"
NEXT_PUBLIC_HSTS_ENABLED="true"
NEXT_PUBLIC_REFERRER_POLICY="strict-origin-when-cross-origin"

# Performance
NEXT_PUBLIC_CACHE_TTL="3600"
NEXT_PUBLIC_IMAGE_OPTIMIZATION="true"
NEXT_PUBLIC_LAZY_LOADING="true"
NEXT_PUBLIC_SERVICE_WORKER="true"

# Monitoring and Logging
NEXT_PUBLIC_LOG_LEVEL="info"
NEXT_PUBLIC_ERROR_TRACKING="true"
NEXT_PUBLIC_PERFORMANCE_MONITORING="true"
NEXT_PUBLIC_USER_ANALYTICS="true"

# Development (should be false in production)
NEXT_PUBLIC_DEBUG="false"
NEXT_PUBLIC_MOCK_API="false"
NEXT_PUBLIC_LOCAL_STORAGE_DEBUG="false"