# Vercel-specific npm configuration
# This ensures clean npm installation for Vercel builds
# IMPORTANT: Keep this minimal to avoid configuration conflicts

# Use temporary directories for npm operations
prefix=/tmp/npm
cache=/tmp/npm-cache

# Disable package-lock to avoid conflicts
package-lock=false

# Force npm to use legacy peer dependencies
legacy-peer-deps=true

# Disable npm telemetry to avoid configuration issues
npm_config_unsafe_perm=true

# Disable strict SSL for build environments
strict-ssl=false

# Disable engine strict checks
engine-strict=false