# Vercel-specific npm configuration
# This ensures clean npm installation for Vercel builds
prefix=/tmp/npm
cache=/tmp/npm-cache
# Use npm instead of yarn to avoid monorepo conflicts
use-npm=true
# Disable npm telemetry to avoid configuration issues
npm_config_unsafe_perm=true
# Set strict SSL to false for build environments
strict-ssl=false
# Disable package-lock to avoid conflicts
package-lock=false
# Force npm to use legacy peer dependencies
legacy-peer-deps=true
# Disable npm auto-install
auto-install-peers=false
# Set Node.js version compatibility
engine-strict=false